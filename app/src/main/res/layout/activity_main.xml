<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnActivity1"
            android:layout_width="217dp"
            android:layout_height="67dp"
            android:layout_marginBottom="328dp"
            android:text="Dönüştürücü"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnActivity3"
            android:layout_width="219dp"
            android:layout_height="67dp"
            android:layout_marginBottom="148dp"
            android:text="Mesaj Gönder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnActivity2"
            android:layout_width="214dp"
            android:layout_height="70dp"
            android:layout_marginBottom="232dp"
            android:text="Rastgele Sayı Üretici"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_numara"
            android:layout_width="185dp"
            android:layout_height="59dp"
            android:layout_marginTop="32dp"
            android:text="202013709044"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_isim" />

        <TextView
            android:id="@+id/tv_isim"
            android:layout_width="188dp"
            android:layout_height="58dp"
            android:layout_marginTop="92dp"
            android:text="Kaan Başbostancı"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.632"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>